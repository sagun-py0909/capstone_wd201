    .course-card h2 {
      color: #007bff;
    }

    .course-card p {
      color: #555;
      line-height: 1.6;
    }

    .enroll {
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
    }

    .enroll-button {
      background-color: red;
      color: white;
      cursor: pointer;
      height: 40px;
    }

    .enroll-button:hover {
      background-color: rgb(109, 12, 12);
    }


    .view-link {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      float: left;
    }

    .cancell {
      background-color: #555;
      color: white;
      cursor: pointer;
      height: 40px;
      float: left;
    }

    .cancell:hover {
      background-color: #333;
    }

    .navbar.nav.bg-body-tertiary {
      background-color: #6a1b9a !important;
    }

    .grid1 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      column-gap: 10px;
